{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug NestJS Backend",
            "runtimeArgs": [
                "run-script",
                "start:debug"
            ],
            "runtimeExecutable": "npm",
            "runtimeVersion": "default",
            "cwd": "${workspaceFolder}",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}